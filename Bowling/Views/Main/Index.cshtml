@{
    ViewBag.Title = "Score";
}

<h2>@ViewBag.Title</h2>
<div ng-controller="ScoreController as scoreCtrl">
    <form class="form-inline" name="newFrameForm" ng-submit="scoreCtrl.addNewFrame()">
        <div class="form-group">
            <label for="first">First</label>
            <input type="number" min="0" max="10" class="form-control" id="first" ng-model="scoreCtrl.newFrame.first">
        </div>
        <div class="form-group">
            <label for="second">Second</label>
            <input type="number" min="0" max="10" class="form-control" id="second" ng-model="scoreCtrl.newFrame.second">
        </div>
        <button id="addButton" type="submit" class="btn btn-default">Add frame</button>
    </form>
    <div >
        <table class="table table-condensed">
            <thead>
                <tr>
                    <th>#</th>
                    <th>First</th>
                    <th>Second</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                <tr ng-repeat="frame in scoreCtrl.match.frames">
                    <td>{{$index + 1}}</td>
                    <td>{{frame.first}}</td>
                    <td>{{frame.second}}</td>
                    <td></td>
                </tr>
                <tr>
                    <td></td>
                    <td></td>
                    <th>Total</th>
                    <th>{{scoreCtrl.total}}</th>
                </tr>
            </tbody>
        </table>
    </div>
</div>


